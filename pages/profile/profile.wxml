<!--pages/profile/profile.wxml-->
<!-- 顶部导航栏 -->
<cu-custom bgColor="bg-blue" isBack="{{false}}">
	<view slot="content">简历</view>
</cu-custom>




<view class="shadow-margin"></view>

<view class="text-center bg-white" style="height:100rpx" >
	<view class="action" >
		<text style="font-size:40rpx" bindtap="onToProcess" >申请追踪</text>
			<!-- <button class="cu-btn bg-blue" bindtap="onToProcess" >开始填写</button> -->
	</view>
</view>

<view class="shadow-margin"></view>

<view class="new-resume-bg">
	<text style="font-size:40rpx;font-weight:600;margin-top:2%;margin-left:3%;width:100%;height:17%">填写新的简历</text>
	<view class="new-resume-fullfill" > 
	<button class="cu-btn bg-blue" bindtap="onToForm" >开始填写</button>
	<view class="center-padding"><text >先填写基本资料，然后获取简历模板，或者以空白简历开始填写</text></view>
	</view>
</view>

<view class="shadow-margin"></view>

<text style="font-size:40rpx;font-weight:600;margin-top:1%;margin-left:3%;width:100%;height:17%">我的申请</text>
<!-- 申请详情 -->
<view class="apply-bg" wx:for="{{applyList}}" style="position:relative">
	<view class="shadow-margin bg-white"style="width:100%;height:30rpx;position:relative"></view>
	<!-- <view class="shadow-margin"style="width:100%;height:14rpx;position:relative"></view> -->
	<view class="bg-white" style="width:100%;height:120rpx;position:absolute;margin-top:60rpx" >
			<text style="position:relative;fon-size:30;margin-left:3%;margin-top:8rpx;font-weight:600">申请\n</text>
			<view class='cu-tag radius bg-blue' style="margin-left:3%;width:120rpx;height:50rpx">{{item.state}}</view>
			<view style="right:5%;width:300rpx;position:absolute;margin-top:80rpx;z-index:2">{{item.created_at}}</view>
	</view>
	<view class="bg-white" style="width:100%;height:100rpx;margin-top:25%;position:absolute;" wx:for="{{nameList}}">
			<view style="margin-left:30rpx;width:50rpx;margin-top:20rpx;position:absolute">{{item.position_name}}</view>
			<view style="margin-left:30rpx;width:50rpx;margin-top:60rpx;position:absolute">{{item.company_name}}</view>
  </view>
</view>

<view style="position:relative;margin-bottom:100rpx;width:100%;height:50rpx"></view>




<!-- 底部导航栏 -->
<view class="cu-bar foot tabber bg-white">
	<view class="action text-grey" bindtap="bindTapHome">
		<view class="cuIcon-home"></view> 首页
	</view>
	<view class="action text-grey" bindtap="bindTapNews">
		<view class="cuIcon-news"></view> 求职
	</view>
	<view class="action text-blue" bindtap="bindTapFile">
		<view class="cuIcon-formfill"></view> 简历
	</view>
	<view class="action text-grey" bindtap="bindTapMy">
		<view class="cuIcon-my"></view> 个人
	</view>
</view>
