/* pages/my/my.wxss */
.text-xl {
  margin: 40rpx;
}

.UCenter-bg {
  background-image: url(https://tse3-mm.cn.bing.net/th/id/OIP._gdos2aJ4QMIbFqMPrm3dwHaEK?pid=Api&rs=1);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  /*padding-left: 25rpx;*/
  overflow: hidden;
  position: relative;
  flex-direction: row;
  align-items: center;
  color: rgb(255, 255, 255);
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.usr-box {
  width: 100%;
}

.identity-box {
  width: 60%;
  padding-left: 40rpx;
  font-weight: bolder;
}

.identity-box text {
  text-align: justify;
  text-align-last: justify;
}

.identity-box text::after {
  width: 100%;
  display: inline-block;
  content: "";
}

.text-xl {
  margin: 0;
  padding: 0;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}