<!--pages/my/personal/personal.wxml-->
<!-- 顶部导航栏 -->
<cu-custom bgColor="bg-blue" isBack="{{true}}">
	<view slot="content">个人</view>
</cu-custom>

<!-- form1 -->
<view class="cu-form-group margin-top">
	<view class="title">头像</view>
	<view class="cu-avatar radius bg-gray"></view>
</view>

<view class="cu-bar bg-white">
	<view class="action">
		照片上传
	</view>
	<view class="action">
		{{imgList.length}}/1
	</view>
</view>
<view class="cu-form-group">
	<view class="grid col-4 grid-square flex-sub">
		<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
			<image src='{{imgList[index]}}' mode='aspectFill'></image>
			<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
				<text class="cuIcon-close"></text>
			</view>
		</view>
		<view class="solids" bindtap="ChooseImage">
			<text class="cuIcon-cameraadd"></text>
		</view>
		<!-- <view wx:if="{{imgList.length<3}}"></view> -->
		<view class="upload-box">
			<view class="cu-btn bg-green">上传</view>
		</view>
	</view>
</view>
<!-- form2 -->
<view class="cu-form-group margin-top">
	<view class="title">姓名</view>
	<input placeholder="输入姓名"></input>
</view>
<view class="cu-form-group">
	<view class="title">出生日期</view>
	<picker mode="date" value="{{date}}" start="1949-10-01" end="2020-10-01" bindchange="DateChange">
		<view class="picker">
			{{date}}
		</view>
	</picker>
</view>

<!-- form3 -->
<view class="cu-form-group margin-top">
	<view class="title">学历</view>
	<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
		<view class="picker">
			{{index?picker[index]:'选择学历'}}
		</view>
	</picker>
</view>
<view class="cu-form-group">
	<view class="title">邮箱</view>
	<input placeholder="输入邮箱"></input>
</view>
<view class="cu-form-group">
	<view class="title">手机号</view>
	<input placeholder="输入手机号"></input>
</view>
<view class="cu-form-group">
	<view class="title">地址选择</view>
	<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
		<view class="picker">
			{{region[0]}}，{{region[1]}}，{{region[2]}}
		</view>
	</picker>
</view>

<button class="cu-btn bg-green block margin-top">保存</button>