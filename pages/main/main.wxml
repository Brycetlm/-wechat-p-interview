<!--pages/main/main.wxml-->

<cu-custom bgColor="bg-blue" isBack="{{true}}">
	<view slot="content">主页</view>
</cu-custom>

<view class="usr-box">
	<view class="cu-avatar lg"></view>
	<text class="usrname text-grey">用户名</text>
</view>

<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
	<swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
		<view class="swiper-item">
			<image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
			<video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
		</view>
	</swiper-item>
</swiper>

<view class="job-box">
	<view class="title"><text>职位推荐:</text></view>
	<!-- 卡片 -->
	<view class="cu-card article no-card">
		<view class="cu-item shadow card-content-no-padding">
			<view class="content">
				<image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="aspectFill" class="push-content-image"></image>
				<view class="desc push-content-desc">
					<view>
						<text class="push-content-title">软件架构师</text>
						<view class="cu-tag bg-blue light sm round">22 天前</view>
					</view>
					<view>
						<text><text>IBM 中国，沙坪坝，重庆</text></text>
					</view>
				</view>
				<view class="desc flex-apply-button" bindtap="detail">
					<view>
						<text class="text-grey flex-apply-text">详细</text>
						<text class="cuIcon-right"></text>
					</view>
				</view>
			</view>
		</view>
	</view>

	<view class="cu-card article no-card">
		<view class="cu-item shadow card-content-no-padding">
			<view class="content">
				<image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big84001.jpg" mode="aspectFill" class="push-content-image"></image>
				<view class="desc push-content-desc">
					<view>
						<text class="push-content-title">UI 设计师</text>
						<view class="cu-tag bg-blue light sm round">1 天前</view>
					</view>
					<view>
						<text><text> 微软，微电园，上海</text></text>
					</view>
				</view>
				<view class="desc flex-apply-button" bindtap="detail">
					<view>
						<text class="text-grey flex-apply-text">详细</text>
						<text class="cuIcon-right"></text>
					</view>
				</view>
			</view>
		</view>
	</view>

		<view class="cu-card article no-card">
		<view class="cu-item shadow card-content-no-padding">
			<view class="content">
				<image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg" mode="aspectFill" class="push-content-image"></image>
				<view class="desc push-content-desc">
					<view>
						<text class="push-content-title">项目经理</text>
						<view class="cu-tag bg-blue light sm round">2 天前</view>
					</view>
					<view>
						<text><text> 谷歌，硅谷，美国</text></text>
					</view>
				</view>
				<view class="desc flex-apply-button" bindtap="detail">
					<view>
						<text class="text-grey flex-apply-text">详细</text>
						<text class="cuIcon-right"></text>
					</view>
				</view>
			</view>
		</view>
	</view>
	<!-- 卡片fin -->
</view>


<view class="cu-bar foot tabber bg-white">
	<view class="action text-blue" bindtap="bindTapHome">
		<view class="cuIcon-homefill"></view> 首页
	</view>
	<view class="action text-grey" bindtap="bindTapNews">
		<view class="cuIcon-news"></view> 求职
	</view>
	<view class="action text-grey" bindtap="bindTapFile">
		<view class="cuIcon-form"></view> 简历
	</view>
	<view class="action text-grey" bindtap="bindTapMy">
		<view class="cuIcon-my"></view> 个人
	</view>
</view>